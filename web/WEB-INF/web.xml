<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <filter>
        <filter-name>A</filter-name>
        <filter-class>com.infinity.webapp.filter.A</filter-class>
    </filter>
    <filter>
        <filter-name>B</filter-name>
        <filter-class>com.infinity.webapp.filter.B</filter-class>
    </filter>
    <filter>
        <filter-name>C</filter-name>
        <filter-class>com.infinity.webapp.filter.C</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>A</filter-name>
        <url-pattern>/Login</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>B</filter-name>
        <url-pattern>/Login</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>C</filter-name>
        <url-pattern>/Login</url-pattern>
    </filter-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
